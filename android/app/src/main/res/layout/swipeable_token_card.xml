<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_margin="16dp">

    <!-- Main card content -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:background="#ffffff">

        <!-- Front side (token info) -->
        <include
            android:id="@+id/frontCard"
            layout="@layout/token_front_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Back side (creator info) -->
        <include
            android:id="@+id/backCard"
            layout="@layout/creator_info_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>

    <!-- Like overlay - TEST VISIBLE -->
    <TextView
        android:id="@+id/likeOverlay"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center|end"
        android:layout_marginEnd="20dp"
        android:background="#4CAF50"
        android:text="❤️ LIKE"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:elevation="10dp"
        android:alpha="0" />

    <!-- Pass overlay - TEST VISIBLE -->
    <TextView
        android:id="@+id/passOverlay"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center|start"
        android:layout_marginStart="20dp"
        android:background="#F44336"
        android:text="✕ PASS"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:elevation="10dp"
        android:alpha="0" />

</FrameLayout>