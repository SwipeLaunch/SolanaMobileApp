<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🚀 Create Token"
                android:textColor="#1a1a1a"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#9945FF20"
                android:padding="8dp"
                android:text="Beta"
                android:textColor="#9945FF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Photo Upload Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="📸 Token Image"
                    android:textColor="#1a1a1a"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Image Preview -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Placeholder for no image -->
                        <LinearLayout
                            android:id="@+id/imagePlaceholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f0f0f0"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="🖼️"
                                android:textSize="48sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add token image"
                                android:textColor="#666"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logo, artwork, or meme"
                                android:textColor="#999"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Selected Image -->
                        <ImageView
                            android:id="@+id/selectedImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <!-- Remove Image Button -->
                        <Button
                            android:id="@+id/removeImageButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="8dp"
                            android:background="@android:drawable/btn_dialog"
                            android:text="✕"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <!-- Photo Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/takePhotoButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="#14B8A6"
                        android:text="📷 Take Photo"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/selectImageButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="#6366F1"
                        android:text="🖼️ Gallery"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Token Details Form -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="✨ Token Details"
                    android:textColor="#1a1a1a"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Token Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Token Name"
                    app:boxStrokeColor="#9945FF"
                    app:hintTextColor="#9945FF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tokenNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="30" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Token Symbol -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Symbol (e.g., MOON)"
                    app:boxStrokeColor="#9945FF"
                    app:hintTextColor="#9945FF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tokenSymbolInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters"
                        android:maxLength="10" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Token Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Description"
                    app:boxStrokeColor="#9945FF"
                    app:hintTextColor="#9945FF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tokenDescriptionInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:maxLength="200" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Supply Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Supply"
                    android:textColor="#9945FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/tokenSupplySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="12dp" />

                <!-- Community Chat Link -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Community Chat Link (Optional)"
                    app:boxStrokeColor="#9945FF"
                    app:hintTextColor="#9945FF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tokenChatLinkInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:maxLength="200" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Launch Options -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="🎯 Launch Path"
                    android:textColor="#1a1a1a"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Launch Type Selection -->
                <RadioGroup
                    android:id="@+id/launchTypeGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Instant Launch Option -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/instantLaunchCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <RadioButton
                                android:id="@+id/instantLaunchRadio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:checked="false"
                                android:text="🚀 Instant Launch"
                                android:textColor="#1a1a1a"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚡ Launch immediately"
                                android:textColor="#059669"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Community Presale Option -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/proposeTokenCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <RadioButton
                                android:id="@+id/presaleLaunchRadio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:checked="true"
                                android:text="🗳️ Propose a Token"
                                android:textColor="#1a1a1a"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🗳️ Community votes → Launch"
                                android:textColor="#9945FF"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RadioGroup>

                <!-- Additional Info for Propose a Token (hidden by default) -->
                <LinearLayout
                    android:id="@+id/presaleOptionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F3F4F6"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="✅ Free to submit"
                                android:textColor="#059669"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚠️ Requires 80 community votes to launch"
                                android:textColor="#D97706"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Create Button -->
        <Button
            android:id="@+id/createTokenButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#9945FF"
            android:text="🚀 Create Token"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Dynamic Cost Information -->
        <androidx.cardview.widget.CardView
            android:id="@+id/costInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/costInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF3CD"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="💡"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/costInfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instant Launch Cost"
                        android:textColor="#856404"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/costInfoDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="≈ 0.1 SOL for token creation + network fees"
                        android:textColor="#856404"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>