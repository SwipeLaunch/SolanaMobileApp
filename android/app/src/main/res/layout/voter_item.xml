<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- User Avatar -->
        <View
            android:id="@+id/voterAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#9945FF"
            android:layout_marginEnd="12dp" />

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/voterWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABC1...XYZ9"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/voterTokens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="voted on 3 tokens"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Follow Button -->
        <Button
            android:id="@+id/followButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Follow"
            android:textSize="12sp"
            android:background="@drawable/follow_button_background"
            android:textColor="#9945FF"
            android:paddingHorizontal="12dp"
            android:minWidth="0dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>