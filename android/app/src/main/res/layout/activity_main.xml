<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7">

    <!-- Main content area -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp">

        <!-- Discover content -->
        <LinearLayout
            android:id="@+id/discoverContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Swipe card container -->
            <FrameLayout
                android:id="@+id/swipeContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- Creator Profile content -->
        <include
            android:id="@+id/profilePage"
            layout="@layout/creator_profile_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Presale content -->
        <include
            android:id="@+id/presalePage"
            layout="@layout/presale_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Leaderboard content -->
        <include
            android:id="@+id/leaderboardPage"
            layout="@layout/leaderboard_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Activity content -->
        <include
            android:id="@+id/activityPage"
            layout="@layout/activity_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Create Token content -->
        <include
            android:id="@+id/createTokenPage"
            layout="@layout/create_token_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:elevation="8dp"
        app:itemIconTint="#9945FF"
        app:itemTextColor="#9945FF"
        app:menu="@menu/bottom_navigation" />

    <!-- Floating Action Button for Wallet Connection (Profile Page Only) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/walletConnectionFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="100dp"
        android:src="@android:drawable/ic_menu_manage"
        android:backgroundTint="#9945FF"
        android:tint="#FFFFFF"
        android:alpha="0.9"
        android:elevation="6dp"
        android:contentDescription="Connect Wallet"
        android:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>