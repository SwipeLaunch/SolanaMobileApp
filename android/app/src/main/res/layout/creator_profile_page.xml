<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Wallet Connection Section - Simplified -->
        <androidx.cardview.widget.CardView
            android:id="@+id/walletConnectionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <Button
                    android:id="@+id/profileWalletButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Connect Solana Wallet"
                    android:textSize="16sp"
                    android:backgroundTint="#9945FF"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/walletStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connect your wallet to see your profile details"
                    android:textSize="15sp"
                    android:textColor="#8E8E93"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- User Profile Section (Initially Hidden) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profileDetailsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ Profile"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <!-- Profile Header - Meta Style -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Profile Avatar - Meta Style -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="2dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/profileAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/gradient_solana_bg" />

                    </androidx.cardview.widget.CardView>

                    <!-- Profile Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/profileUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="W97AHb...gM5qpN"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1C1C1E"
                                android:fontFamily="monospace" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" â–¼"
                                android:textSize="12sp"
                                android:textColor="#8E8E93"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>

                        <!-- Status Badge -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/verified_badge_bg"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp">

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/green_status_dot"
                                android:layout_marginEnd="4dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SL Staking"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Balance & Network - Meta Style Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#F8F9FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- SOL Balance -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/profileSolBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00 SOL"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#1C1C1E"
                                android:layout_marginBottom="2dp" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available Balance"
                                android:textSize="13sp"
                                android:textColor="#8E8E93" />

                        </LinearLayout>

                        <!-- Network Status -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="2dp">

                                <View
                                    android:layout_width="6dp"
                                    android:layout_height="6dp"
                                    android:background="@drawable/green_status_dot"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:id="@+id/profileNetwork"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Devnet"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:textColor="#42B883" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Network"
                                android:textSize="13sp"
                                android:textColor="#8E8E93" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Wallet Address - Simple Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/ios_card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet: "
                        android:textSize="13sp"
                        android:textColor="#8E8E93" />

                    <TextView
                        android:id="@+id/profileWalletAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC1...XYZ9"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1C1C1E" />

                </LinearLayout>

                <!-- Action Buttons - Meta Style -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/requestAirdropButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="Get SOL"
                        android:textSize="14sp"
                        android:backgroundTint="#9945FF"
                        android:textColor="#ffffff"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="sans-serif-medium" />

                    <Button
                        android:id="@+id/copyAddressButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="Copy"
                        android:textSize="14sp"
                        android:backgroundTint="#E4E6EA"
                        android:textColor="#1C1C1E"
                        android:layout_marginHorizontal="4dp"
                        android:fontFamily="sans-serif-medium" />

                    <Button
                        android:id="@+id/disconnectWalletButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="Sign Out"
                        android:textSize="14sp"
                        android:backgroundTint="#E4E6EA"
                        android:textColor="#E41E3F"
                        android:layout_marginStart="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Activity Summary Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/activityCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="ðŸ“ˆ Your Activity Summary"
                    android:textColor="#1a1a1a"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- First Row: Likes and Presales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/profileLikesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#9945FF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Likes Given"
                            android:textColor="#8E8E93"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/profilePresalesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#9945FF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Presales Joined"
                            android:textColor="#8E8E93"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Second Row: Following and Followers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/profileFollowingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#9945FF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textColor="#8E8E93"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/profileFollowersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#9945FF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textColor="#8E8E93"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Proposal Status Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="ðŸ“Š Proposal Status"
                    android:textColor="#1C1C1E"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Proposal Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/proposalLikesReceived"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#9945FF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Likes Received"
                            android:textColor="#8E8E93"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/proposalInPresale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#9945FF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Presale"
                            android:textColor="#8E8E93"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/proposalLaunched"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#9945FF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Launched"
                            android:textColor="#8E8E93"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Creator Tokens Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽ¨ Proposal Gallery"
                        android:textColor="#1C1C1E"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/totalTokenCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#34C759"
                        android:background="@drawable/ios_status_badge"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Hidden elements needed by code -->
                <TextView
                    android:id="@+id/creatorAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                
                <TextView
                    android:id="@+id/lastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/creatorTokensRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/creatorTokensEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="ðŸš€"
                        android:textSize="48sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="No tokens found"
                        android:textColor="#666"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tokens created by this address will appear here"
                        android:textColor="#999"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Loading State -->
                <LinearLayout
                    android:id="@+id/creatorTokensLoadingState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading creator tokens..."
                        android:textColor="#666"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Refresh Button -->
        <Button
            android:id="@+id/refreshTokensButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ”„ Refresh Tokens"
            android:textSize="16sp"
            android:backgroundTint="#9945FF"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>