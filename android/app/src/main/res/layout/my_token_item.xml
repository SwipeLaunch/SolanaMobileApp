<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/ios_card_background">

        <!-- Token Icon with iOS-style circular container -->
        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            android:backgroundTint="#E4E6EA">

            <ImageView
                android:id="@+id/tokenIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="8dp" />

        </androidx.cardview.widget.CardView>

        <!-- Token Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tokenName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Token Name"
                    android:textColor="#1C1C1E"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tokenStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ios_status_badge"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:text="Active"
                    android:textColor="#34C759"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/tokenSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:text="SYMBOL"
                android:textColor="#8E8E93"
                android:textSize="15sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tokenSupply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supply: 1B"
                android:textColor="#8E8E93"
                android:textSize="13sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/viewTokenButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="#1877F2"
                android:minWidth="60dp"
                android:text="View"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <Button
                android:id="@+id/chatLinkButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="#42A5F5"
                android:minWidth="60dp"
                android:text="Chat"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>