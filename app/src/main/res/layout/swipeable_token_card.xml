<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_margin="16dp">

    <!-- Main card content -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Image placeholder -->
            <View
                android:id="@+id/imagePlaceholder"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#f0f0f0"
                android:layout_marginBottom="16dp" />

            <!-- Token info -->
            <TextView
                android:id="@+id/tokenName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Token Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/creator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="by @creator"
                android:textSize="14sp"
                android:textColor="#9945FF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Token description goes here"
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginBottom="16dp" />

            <!-- Footer with likes -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="❤️ 0"
                android:textSize="16sp"
                android:textColor="#666666"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Like overlay -->
    <View
        android:id="@+id/likeOverlay"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="top|end"
        android:layout_margin="40dp"
        android:background="@drawable/like_overlay"
        android:alpha="0" />

    <!-- Pass overlay -->
    <View
        android:id="@+id/passOverlay"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="top|start"
        android:layout_margin="40dp"
        android:background="@drawable/pass_overlay"
        android:alpha="0" />

</FrameLayout>